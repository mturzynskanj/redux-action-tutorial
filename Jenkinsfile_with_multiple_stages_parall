pipeline {
    agent any
    environment {
        RELEASE = '20.04'
    }
    stages {
        stage('Build'){
            agent any
            environment {
                LOG_LEVEL = 'INFO'
            }
            parallel {
                stage('parallel-1'){
                    steps {
                        echo "Building release ${RELEASE} for  ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }

                }
                stage('parallel-2'){
                    steps {
                        echo "Building release ${RELEASE} for  ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }

                }
                stage('parallel-3'){
                    steps {
                        echo "Building release ${RELEASE} for  ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }
                }
            }
        }
        stage('Test'){
            steps {
                echo "Testing.  I can see release ${RELEASE}, but not log level ${LOG_LEVEL}"
            }
        }
    }  
}